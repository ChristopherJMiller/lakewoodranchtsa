<div class="main-div">
  <% if logged_in %>
    <% if User.find_by_id(session[:user_id]).is_admin %>
      <%= link_to new_accountability_log_path, class: 'btn btn-info pull-xs-right' do %>
        <i class="fa fa-plus"></i> Create a New Accountability Log
      <% end %>
    <% end %>
  <% end %>
  <h1>Accountability Logs</h1>
  <%= render @accountability_logs or 'No accountability logs have been posted.' %>
</div>
