<div class='main-div'>
    <h1 class="display-3"><%= @event.name %></h1>
    <p class="lead"><%= @event.description %></p>
    <p class="lead">Max Members Per Team: <%= @event.max_members_per_team %></p>
    <%= link_to 'View All Teams', event_teams_path(@event), class: 'btn btn-primary btn-lg btn-block' %>
    <% if logged_in %>
      <%= link_to 'Create a New Team', new_event_team_path(@event), class: 'btn btn-secondary btn-lg btn-block' %>
    <% end %>
</div>
