<div class="card card-max-width mr-1">
  <div class="card-block">
    <% if event.image_path.blank? %>
      <h4 class="card-title"><%= event.name %></h4>
      <p class="card-text"><%= event.description.truncate(100, separator: ' ') %></p>
      <%= link_to 'View', event_path(event), class: 'btn btn-primary event-btn' %>
    <% else %>
      <%= image_tag event.image_path, class: "img-fluid" %>
      <p class="card-title text-center"><%= event.name %></p>
    <% end %>
  </div>
  <div class="card-footer" style="background-color: white; border-top: none;">
    <%= link_to 'View', event_path(event), class: 'btn btn-primary btn-sm btn-block event-btn' %>
  </div>
</div>
