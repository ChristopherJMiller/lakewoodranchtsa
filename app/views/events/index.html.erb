<div class="main-div">
  <% if logged_in %>
    <% if User.find_by_id(session[:user_id]).admin? %>
      <%= link_to new_event_path, class: 'btn btn-info float-xs-right' do %>
        <i class="fa fa-plus"></i> Create a New Event
      <% end %>
    <% end %>
  <% end %>
  <h1>All Events</h1>
  <div>
    <%= render @events %>
  </div>
</div>
