<div style="margin: 1em 1em 1em 1em;">
  <h3>Log In</h3>

  <%= form_tag({controller: 'sessions', action: 'create'}, method: 'post', remote: true, id: 'navbar_login') do %>
    <fieldset class="form-group">
      <%= label_tag :email, 'Email', class: 'form-control-label' %>
      <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Email' %>
    </fieldset>

    <fieldset class="form-group">
      <%= label_tag :password, 'Password', class: 'form-control-label' %>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
    </fieldset>

    <%= submit_tag "Log In", class: "btn btn-primary btn-block" %>
  <% end %>
  <%= link_to "Register", register_path, class: "btn btn-secondary btn-block" %>
</div>
