<div class="main-div">
  <h1>Create a New Sign Up Sheet</h1>

  <%= form_for @sign_up_sheet, remote: true do |f| %>
    <fieldset class="form-group">
      <%= f.label :name, class: 'form-control-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :date, class: 'form-control-label' %>
      <%= f.date_select :date %>
    </fieldset>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
