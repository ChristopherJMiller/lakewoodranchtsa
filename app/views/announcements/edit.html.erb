<div class="main-div">
  <h1>Edit <%= @announcement.title %></h1>
  <%= form_for @announcement, remote: true do |f| %>

    <fieldset class="form-group">
      <%= f.label :title, class: 'form-control-label' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Announcement Title' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :body, class: 'form-control-label' %>
      <%= f.text_area :body, cols: 20, rows: 10, class: 'form-control', placeholder: 'Post Body' %>
    </fieldset>

    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
  <%= button_to 'Remove Announcement', { action: 'destroy', id: @announcement.id }, method: :delete, remote: true, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
  <hr>
  <h1 class="display-3">Preview</h1>
  <h1 class="media-heading" id="preview_title"></h1>
  <p id="preview_body"></p>
</div>
