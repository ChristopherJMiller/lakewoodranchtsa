<div class="main-div">
  <div class="row">
    <div class="col-md-6">
      <h1>Create a New Announcement</h1>

      <%= form_for @announcement, remote: true do |f| %>
        <fieldset class="form-group">
          <%= f.label :title, class: 'form-control-label' %>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Announcement Title' %>
        </fieldset>

        <fieldset class="form-group">
          <%= f.label :body, class: 'form-control-label' %>
          <%= f.text_area :body, cols: 20, rows: 10, class: 'form-control', placeholder: 'Post Body' %>
        </fieldset>

        <%= f.submit 'Post', class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>Preview</h1>
      <h1 class="media-heading" id="preview_title"></h1>
      <p id="preview_body"></p>
    </div>
  </div>
</div>
