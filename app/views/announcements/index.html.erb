<div class="main-div">
  <% if logged_in %>
    <% if User.find_by_id(session[:user_id]).is_admin %>
      <%= link_to new_announcement_path, class: 'btn btn-info pull-xs-right' do %>
        <i class="fa fa-plus"></i> Create a New Announcement
      <% end %>
    <% end %>
  <% end %>
  <h1>Announcements</h1>
  <%= render @announcements or 'No announcements have been posted.' %>
</div>
