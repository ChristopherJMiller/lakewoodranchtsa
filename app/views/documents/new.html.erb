<div class="main-div">
  <h1>Create a New Document</h1>

  <%= form_for @document, remote: true do |f| %>
    <fieldset class="form-group">
      <%= f.label :title, class: 'form-control-label' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Document Title' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :link, class: 'form-control-label' %>
      <%= f.text_field :link, class: 'form-control', placeholder: 'Document External Link' %>
    </fieldset>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
